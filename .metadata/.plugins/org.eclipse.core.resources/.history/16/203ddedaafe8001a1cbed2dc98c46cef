package view;

import javax.swing.JOptionPane;

import main.Principal;
import model.Generic;
import model.Prato;

public class Mensageiro {

	public static boolean perguntar(Generic objetoGenerico) {
		String[] opcoes = { "SIM", "NAO" };
		int resposta = JOptionPane.showOptionDialog(null
				                                  , "O prato que você pensou é " + objetoGenerico.getDescricao()
				                                  , "Confirmar", JOptionPane.DEFAULT_OPTION
				                                  , JOptionPane.QUESTION_MESSAGE
				                                  , null
				                                  , opcoes
				                                  , opcoes[0]);
		
		return resposta == 0 ? true : false;
	}

	public static String desistir() {
		String resposta = JOptionPane.showInputDialog(null
				                                   , "Qual prato você pensou?"
				                                   , "Desisto"
				                                   ,  JOptionPane.QUESTION_MESSAGE);
		
		
		if (resposta == null) {
			Principal.continuar = false;
			resposta = new String();
		} else {
			resposta.toLowerCase();

		}

		return resposta;
	}

	public static String completeAFrase(Prato pratoNovo, Prato prato) {

		String resposta = JOptionPane.showInputDialog(null
				                                    , pratoNovo.getDescricao() + " é ____________ mas " + prato.getDescricao() + " não."
				                                    , "Complete"
				                                    , JOptionPane.QUESTION_MESSAGE);
		if (resposta == null) {
			Principal.continuar = false;
			resposta = new String();
		} else {
			resposta.toLowerCase();

		}

		return resposta;
	}

	public static void mensagem(String mensagem) {
		JOptionPane.showMessageDialog(null, mensagem);
	}

}
